<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.donggukthon.team5.presentation.tree.TreeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_tree_record_hint_content"
            android:layout_width="280dp"
            android:layout_height="390dp"
            android:src="@drawable/shape_border_radius10_tree_modal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="31dp"
            android:layout_marginHorizontal="18dp"
            android:textAppearance="@style/TextAppearance.Guide"
            android:text="@string/dialog_tree_hint_content"
            android:lineSpacingExtra="10dp"
            app:layout_constraintTop_toTopOf="@id/iv_tree_record_hint_content"
            app:layout_constraintStart_toStartOf="@id/iv_tree_record_hint_content"
            app:layout_constraintEnd_toEndOf="@id/iv_tree_record_hint_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="142dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="24dp"
            android:text="@string/dialog_tree_hint_content_small"
            android:textAppearance="@style/TextAppearance.Body"
            android:textColor="#5C5C5C"
            app:layout_constraintTop_toTopOf="@id/iv_tree_record_hint_content"
            app:layout_constraintStart_toStartOf="@id/iv_tree_record_hint_content"
            app:layout_constraintEnd_toEndOf="@id/iv_tree_record_hint_content"/>

        <ImageButton
            android:id="@+id/btn_tree_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:src="@drawable/img_tree_record"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_tree_record_hint_content"
            app:layout_constraintStart_toStartOf="@id/iv_tree_record_hint_content"
            app:layout_constraintEnd_toEndOf="@id/iv_tree_record_hint_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>